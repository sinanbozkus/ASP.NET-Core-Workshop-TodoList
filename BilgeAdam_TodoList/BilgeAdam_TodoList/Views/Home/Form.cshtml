@model FormViewModel

<h2>@(Model.IsNew ? "Yeni Yapılacak" : "Yapılacak Düzenle")</h2>

<form class="form-horizontal" asp-action="Kaydet" asp-controller="Home">

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Baslik"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Baslik" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Aciklama"></label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="8" asp-for="Aciklama"></textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-primary">
                @(Model.IsNew ? "Oluştur" : "Güncelle")
            </button>
        </div>
    </div>

</form>